<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.squeaker.squeaker" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.squeaker.app.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.squeaker.app.RecordSqueakActivity"
            android:label="@string/title_activity_record_squeak" >
        </activity>
        <activity
            android:name="com.squeaker.app.NewsFeedActivity"
            android:label="@string/title_activity_news_feed" >
        </activity>
        <activity
            android:name="com.squeaker.app.UserSearchActivity"
            android:label="@string/title_activity_user_search" >
        </activity>
        <activity
            android:name="com.squeaker.app.UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name="com.squeaker.app.AccountSettingsActivity"
            android:label="@string/title_activity_account_settings" >
        </activity>
    </application>

</manifest>
